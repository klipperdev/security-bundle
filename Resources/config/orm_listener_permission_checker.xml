<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Doctrine ORM Permission Checker Listener -->
        <service id="klipper_security.permission_checker.orm.listener"
                 class="Klipper\Bundle\SecurityBundle\Doctrine\ORM\Listener\PermissionCheckerListenerContainerAware">
            <tag name="doctrine.event_subscriber" priority="256"/>
            <property name="container" type="service" id="service_container"/>
        </service>
    </services>
</container>
